{
  "scripts": {
    "build": "npm-run-all compile process process-min",
    "compile": "sass ./src/simple-grid.scss ./tmp/simple-grid.css",
    "process": "lightningcss --browserslist ./tmp/simple-grid.css -o dist/simple-grid.css",
    "process-min": "lightningcss --minify --browserslist ./tmp/simple-grid.css -o dist/simple-grid-min.css"
  },
  "dependencies": {
    "lightningcss": "^1.23.0",
    "npm-run-all": "^4.1.5"
  },
  "browserslist": [
    "> 1%, last 6 versions, Firefox ESR, not dead"
  ]
}
